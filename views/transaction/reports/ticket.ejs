<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="<%= style %>">
  <title><%= title %></title>
  <style>
    body {
      font-family: Arial, sans-serif;
    }
    .container {
      padding: 20px;
    }
    .header, .section {
      margin-bottom: 20px;
    }
    .header img {
      width: 100px;
      height: 100px;
    }
    .header-info {
      text-align: center;
    }
    .table {
      width: 100%;
      border-collapse: collapse;
    }
    .table th, .table td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: left;
    }
    .table th {
      background-color: #f2f2f2;
    }
    .category-header {
      background-color: #f9f9f9;
      font-weight: bold;
      text-align: center;
    }
    .total-row {
      font-weight: bold;
    }
    .subtotal-row {
      font-weight: bold;
      background-color: #f0f0f0;
    }
  </style>
</head>

<body>
  <main class="container">
    <div class="header flex flex-column align-items-center">
      <div>
        <img src="<%= company.rutaLogo ?? data.icon %>" alt="Logo de la empresa">
      </div>

      <div class="header-info">
        <h3><%= company.nombreEmpresa %></h3>
        <p><%= branch.direccion %></p>
        <p><%= branch.ubigeo.departamento %> - <%= branch.ubigeo.provincia %> - <%= branch.ubigeo.distrito %></p>
        <p><%= branch.telefono %> | <%= branch.celular %></p>
        <p><%= branch.paginaWeb %> | <%= branch.email %></p>
      </div>
    </div>
    
    <h3 class="text-center mb-5">REPORTE FINANCIERO</h3>

    <div class="section">
      <div class="mb-3"><p>FECHA:</p> <h4><%= formatDate(startDate) %> - <%= formatDate(endDate) %></h4> </div>
      <div class="mb-3"><p>SUCURSAL:</p> <h4><%= nameBranch %></h4> </div>
      <div class="mb-3"><p>USUARIO:</p> <h4><%= nameUser %></h4> </div>
    </div>

    <div class="section">
      <h3 class="mb-2">RESUMEN</h3>
      <table class="table">
        <thead>
          <tr>
            <th>Concepto</th>
            <th>Monto</th>
          </tr>
        </thead>
        <tbody>
          <tr class="category-header">
            <td colspan="2">Ingresos</td>
          </tr>
          <% for (const item of incomes) { %>
            <tr>
              <td><p class="ml-5"><%= item.concepto %></p></td>
              <td><p><%= currency.simbolo %> <%= formatDecimal(item.total) %></p></td>
            </tr>
          <% } %>
          <tr class="subtotal-row">
            <td><p class="ml-5">Total Ingresos</p></td>
            <td><%= currency.simbolo %> <%= formatDecimal(income) %></td>
          </tr>
          <tr class="category-header">
            <td colspan="2">Egresos</td>
          </tr>
          <% for (const item of expenses) { %>
            <tr>
              <td><p class="ml-5"><%= item.concepto %></p></td>
              <td><p><%= currency.simbolo %> <%= formatDecimal(item.total) %></p></td>
            </tr>
          <% } %>
          <tr class="subtotal-row">
            <td><p class="ml-5">Total Egresos</p></td>
            <td><%= currency.simbolo %> <%= formatDecimal(expense) %></td>
          </tr>
          <tr class="total-row">
            <td>TOTAL NETO</td>
            <td><%= currency.simbolo %> <%= formatDecimal(income - expense) %></td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="section">
      <h3 class="mb-2">BANCOS - CUENTAS</h3>
      <table class="table">
        <thead>
          <tr>
            <th>Cuenta</th>
            <th>Monto</th>
          </tr>
        </thead>
        <tbody>
          <% for (const item of banks) { %>
            <tr>
              <td><%= item.nombre %></td>
              <td><%= currency.simbolo %> <%= formatDecimal(item.saldo) %></td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </main>
</body>

</html>
